
<% if current_user %>
  <h1 class="page-header">Your Dashboard</h1>

  <div class="row">

    <div class="col-xs-5">
      <ul>
        <% current_user.days.all.each do |day| %>
          <li class="day-link list list_item">
            <h4><%= link_to day.weekday, day_activities_path(day) %>
              - Date: <%= day.datefield %></h4>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-xs-7">
      <div id="totalbar"><%= render partial: "dashbar", locals: { days: current_user.days } %></div>
    </div>

  </div>
<% else %>
  <div class="info-pane welcome-pane">
    <h1 id="intro-header"><strong>Please log in or sign up to continue.</strong></h1>

    <h3 class="text-xs-center">CodeWatch is an app designed to help developers keep track of how much time they spend on various tasks. Create an account now and begin logging activities. </h3>
    
    <br>
    <p><%= link_to "Create Account", new_user_registration_path, class: "btn btn-default field" %></p>
  </div>
<% end %>
